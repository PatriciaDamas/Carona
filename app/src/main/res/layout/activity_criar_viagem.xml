<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@android:color/white"
    android:minHeight="95dp"
    android:theme="@style/AppTheme"
    tools:context="com.carona.HomeActivity"
    tools:layout_editor_absoluteY="81dp">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CARONA"
        android:fontFamily="@font/sara"
        android:textColor="@color/colorSelect"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar4" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        style="@style/AppTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:alwaysDrawnWithCache="false"
        android:animateLayoutChanges="false"
        android:animationCache="false"
        android:background="#83bbb6"
        android:textAlignment="gravity"
        app:itemIconTint="@animator/bottom_nav_color"
        app:itemTextColor="@animator/bottom_nav_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:menu="@menu/navigation">

    </android.support.design.widget.BottomNavigationView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toTopOf="@+id/navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.0">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"
                    android:text="De"
                    android:textColor="@color/colorText"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/txtPartida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/colorApp"
                    android:drawableBottom="@color/colorApp"
                    android:drawablePadding="1dp"
                    android:drawableRight="@drawable/ic_lupa"
                    android:drawableTint="@color/colorApp"
                    android:ems="10"
                    android:hint="Local de partida"
                    android:inputType="textPersonName"
                    android:textColor="@color/colorApp"
                    android:textColorHighlight="@color/colorApp"
                    android:textColorHint="@color/placeholderColor"
                    android:textColorLink="@color/colorApp"
                    android:textCursorDrawable="@color/colorApp"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="20dp"
                    android:text="Para"
                    android:textColor="@color/colorText"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/txtChegada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/colorApp"
                    android:drawableBottom="@color/colorApp"
                    android:drawablePadding="1dp"
                    android:drawableRight="@drawable/ic_lupa"
                    android:drawableTint="@color/colorApp"
                    android:ems="10"
                    android:hint="Local de chegada"
                    android:inputType="textPersonName"
                    android:textColor="@color/colorApp"
                    android:textColorHighlight="@color/colorApp"
                    android:textColorHint="@color/placeholderColor"
                    android:textColorLink="@color/colorApp"
                    android:textCursorDrawable="@color/colorApp"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="0dp"
                    android:text="Data"
                    android:textColor="@color/colorText"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/txtData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/colorApp"
                    android:drawableBottom="@color/colorApp"
                    android:drawablePadding="1dp"
                    android:drawableRight="@drawable/ic_calendar"
                    android:drawableTint="@color/colorApp"
                    android:ems="10"
                    android:hint="dd/mm/aaaa"
                    android:inputType="date"
                    android:textColor="@color/colorApp"
                    android:textColorHighlight="@color/colorApp"
                    android:textColorHint="@color/placeholderColor"
                    android:textColorLink="@color/colorApp"
                    android:textCursorDrawable="@color/colorApp"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="0dp"
                    android:text="Hora"
                    android:textColor="@color/colorText"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/txtHora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/colorApp"
                    android:drawableBottom="@color/colorApp"
                    android:drawablePadding="1dp"
                    android:drawableRight="@drawable/ic_clock"
                    android:drawableTint="@color/colorApp"
                    android:ems="10"
                    android:hint="hh:mm"
                    android:inputType="time"
                    android:textColor="@color/colorApp"
                    android:textColorHighlight="@color/colorApp"
                    android:textColorHint="@color/placeholderColor"
                    android:textColorLink="@color/colorApp"
                    android:textCursorDrawable="@color/colorApp"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="0dp"
                    android:text="PreÃ§o"
                    android:textColor="@color/colorText"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/txtPrecoCriarViagem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/colorApp"
                    android:drawableBottom="@color/colorApp"
                    android:drawableTint="@color/colorApp"
                    android:ems="10"
                    android:hint="PreÃ§o (EUR)"
                    android:inputType="numberDecimal"
                    android:textColor="@color/colorApp"
                    android:textColorHighlight="@color/colorApp"
                    android:textColorHint="@color/placeholderColor"
                    android:textColorLink="@color/colorApp"
                    android:textCursorDrawable="@color/colorApp"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="0dp"
                    android:text="Lugares"
                    android:textColor="@color/colorText"
                    android:textSize="12sp" />

                <SeekBar
                    android:id="@+id/seekbarLugaresLivres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@animator/seekbar"
                    android:max="8"
                    android:min="1"
                    android:secondaryProgressTint="@animator/seekbar"
                    android:thumbTint="@animator/seekbar" />

                <TextView
                    android:id="@+id/txtlugaresCriarViagem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/colorText"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnCriarViagem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorBtn"
                    android:elevation="0dp"
                    android:fontFamily="sans-serif"
                    android:inputType="textCapSentences"
                    android:onClick="clickCriarViagem"
                    android:text="Registar Viagem"
                    android:textColor="@color/colorSelect"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent" />

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>

